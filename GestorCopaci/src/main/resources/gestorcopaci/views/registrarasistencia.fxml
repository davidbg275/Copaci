<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="gestorcopaci.controllers.RegistrarAsistenciaController" spacing="20" 
      style="-fx-padding: 20; -fx-background-color: white;" prefWidth="600" prefHeight="500">
    
    <Label text="Registrar Asistencia" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <!-- InformaciÃ³n del vocal -->
    <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
        <Label fx:id="lblVocalInfo" text="Vocal: " style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ProgressBar fx:id="progressAsistencia" prefWidth="200" progress="0"/>
            <Label fx:id="lblProgreso" text="0/10 eventos (0%)" style="-fx-font-size: 12px;"/>
        </HBox>
    </VBox>
    
    <!-- Tabla de eventos disponibles -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Eventos Disponibles:" style="-fx-font-weight: bold;"/>
            <Label text="(Los eventos en verde ya tienen asistencia registrada)" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
        </HBox>
        <TableView fx:id="tablaEventos" prefHeight="250">
            <columns>
                <TableColumn fx:id="colIdEvento" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNombreEvento" text="Nombre del Evento" prefWidth="300"/>
                <TableColumn fx:id="colFechaEvento" text="Fecha" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        
        <Label text="Seleccione un evento de la tabla y haga clic en 'Registrar Asistencia'" 
               style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
    </VBox>
    
    <!-- Botones -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="btnCerrar" text="Cerrar" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"
                onAction="#handleCerrar"/>
        <Button fx:id="btnRegistrarAsistencia" text="Registrar Asistencia" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#handleRegistrarAsistencia"/>
    </HBox>
</VBox>