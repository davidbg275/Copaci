<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/fxml/1" 
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gestorcopaci.controllers.DonacionesController"
      spacing="0" 
      style="-fx-background-color: #f8f9fa;"
      prefWidth="800" prefHeight="600">

    <!-- Header con gradiente azul -->
    <VBox style="-fx-background-color: linear-gradient(to right, #1976D2, #2196F3); -fx-padding: 20;">
        <Label text="Registro de Donaciones" 
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="Sistema de Gestión Copaci" 
               style="-fx-text-fill: #e3f2fd; -fx-font-size: 14px; -fx-padding: 5 0 0 0;"/>
    </VBox>

    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: transparent; -fx-padding: 20;">
        <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 30;">
            
            <!-- Información de la Donación -->
            <VBox spacing="15">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="1." style="-fx-text-fill: #1976D2; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Información de la Donación" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                </HBox>
                <Separator style="-fx-background-color: #e0e0e0;"/>
                
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" halignment="RIGHT"/>
                        <ColumnConstraints percentWidth="60"/>
                    </columnConstraints>
                    
                    <!-- ID Ciudadano -->
                    <Label text="ID Ciudadano:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <HBox spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <TextField fx:id="txtIdCiudadano" promptText="Ingrese ID del ciudadano" 
                                 style="-fx-pref-width: 150; -fx-pref-height: 35; -fx-background-radius: 4; -fx-border-radius: 4;"/>
                        <Label fx:id="lblNombreCiudadano" text="" 
                               style="-fx-text-fill: #666; -fx-font-style: italic; -fx-padding: 8 0 0 0;"/>
                    </HBox>
                    
                    <!-- Concepto -->
                    <Label text="Concepto:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="txtConcepto" promptText="Ej: Donación voluntaria, Cooperación especial..." 
                             style="-fx-pref-width: 300; -fx-pref-height: 35; -fx-background-radius: 4; -fx-border-radius: 4;"
                             GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <!-- Monto -->
                    <Label text="Monto:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="txtMonto" promptText="0.00" 
                             style="-fx-pref-width: 200; -fx-pref-height: 35; -fx-background-radius: 4; -fx-border-radius: 4;"
                             GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <!-- Fecha Donación -->
                    <Label text="Fecha de Donación:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <DatePicker fx:id="dpFechaDonacion" 
                              style="-fx-pref-width: 200; -fx-pref-height: 35;"
                              GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Total de Donaciones -->
            <VBox spacing="10" style="-fx-background-color: #e8f5e8; -fx-background-radius: 6; -fx-padding: 15; -fx-border-color: #4caf50; -fx-border-radius: 6; -fx-border-width: 1;">
                <Label fx:id="lblTotalDonaciones" text="Total Donaciones: $0.00" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
            </VBox>

            <!-- Botones -->
            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                <Button fx:id="btnGuardar" text="Registrar Donación" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 180; -fx-pref-height: 40; -fx-background-radius: 4;"/>
                <Button fx:id="btnLimpiar" text="Limpiar Campos" 
                        style="-fx-background-color: #78909C; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 150; -fx-pref-height: 40; -fx-background-radius: 4;"/>
                <Button fx:id="btnCancelar" text="Cancelar" 
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 4;"/>
            </HBox>

        </VBox>
    </ScrollPane>

</VBox>
