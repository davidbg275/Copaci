<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="gestorcopaci.controllers.DetallesVocalController" spacing="20" 
      style="-fx-padding: 20; -fx-background-color: white;" prefWidth="500" prefHeight="600">
    
    <Label text="Detalles del Vocal" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <!-- InformaciÃ³n del vocal -->
    <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="200"/>
            </columnConstraints>
            
            <Label text="ID Vocal:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblIdVocal" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="ID Ciudadano:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblIdCiudadano" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Fecha Inicio:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblFechaInicio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Fecha Fin:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblFechaFin" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Label text="Eventos Asistidos:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblEventosAsistidos" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <Label text="Porcentaje:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblPorcentajeAsistencia" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            
            <Label text="Estado:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblEstado" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>
        
        <VBox spacing="5">
            <Label text="Progreso del Mandato:" style="-fx-font-weight: bold;"/>
            <ProgressBar fx:id="progressBar" prefWidth="300" progress="0"/>
        </VBox>
    </VBox>
    
    <!-- Historial de asistencias -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Historial de Asistencias:" style="-fx-font-weight: bold;"/>
        <TableView fx:id="tablaAsistencias" prefHeight="200">
            <columns>
                <TableColumn fx:id="colIdAsistencia" text="ID Asistencia" prefWidth="100"/>
                <TableColumn fx:id="colIdEvento" text="ID Evento" prefWidth="100"/>
                <TableColumn fx:id="colFechaAsistencia" text="Fecha Asistencia" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
    
    <!-- Botones -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="btnActualizar" text="Actualizar" 
                style="-fx-background-color: #3498db; -fx-text-fill: white;"
                onAction="#handleActualizar"/>
        <Button fx:id="btnCerrar" text="Cerrar" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"
                onAction="#handleCerrar"/>
    </HBox>
</VBox>