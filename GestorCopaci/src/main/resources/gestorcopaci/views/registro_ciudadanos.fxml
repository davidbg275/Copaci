<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/fxml/1" 
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gestorcopaci.controllers.RegistroCiudadanosController"
      spacing="0" 
      style="-fx-background-color: #f8f9fa;"
      prefWidth="850" prefHeight="700">

    <!-- Header con gradiente azul -->
    <VBox style="-fx-background-color: linear-gradient(to right, #1976D2, #2196F3); -fx-padding: 20;">
        <Label text="Registro de Ciudadanos" 
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="Sistema de Gestión Copaci" 
               style="-fx-text-fill: #e3f2fd; -fx-font-size: 14px; -fx-padding: 5 0 0 0;"/>
    </VBox>

    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: transparent; -fx-padding: 20;">
        <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 30;">
            
            <!-- Información Personal -->
            <VBox spacing="15">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="1." style="-fx-text-fill: #1976D2; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Información Personal" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                </HBox>
                <Separator style="-fx-background-color: #e0e0e0;"/>
                
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" halignment="RIGHT"/>
                        <ColumnConstraints percentWidth="60"/>
                    </columnConstraints>
                    
                    <!-- Fila 1 - Nombre -->
                    <Label text="Nombre Completo:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="txtNombre" promptText="Ingrese nombre completo" 
                             style="-fx-pref-width: 300; -fx-pref-height: 35; -fx-background-radius: 4; -fx-border-radius: 4;"
                             GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <!-- Fila 2 - Fecha Nacimiento -->
                    <Label text="Fecha de Nacimiento:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <DatePicker fx:id="dpFechaNacimiento" 
                              style="-fx-pref-width: 300; -fx-pref-height: 35;"
                              GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <!-- Fila 3 - Lugar Nacimiento -->
                    <Label text="Lugar de Nacimiento:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="txtLugarNacimiento" promptText="Ciudad, Estado" 
                             style="-fx-pref-width: 300; -fx-pref-height: 35; -fx-background-radius: 4; -fx-border-radius: 4;"
                             GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <!-- Fila 4 - Grado Estudios -->
                    <Label text="Grado de Estudios:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <ComboBox fx:id="cbGradoEstudios" promptText="Seleccione grado de estudios" 
                            style="-fx-pref-width: 300; -fx-pref-height: 35;"
                            GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Domicilio -->
            <VBox spacing="15">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="2." style="-fx-text-fill: #1976D2; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Domicilio" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                </HBox>
                <Separator style="-fx-background-color: #e0e0e0;"/>
                
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" halignment="RIGHT"/>
                        <ColumnConstraints percentWidth="60"/>
                    </columnConstraints>
                    
                    <!-- Domicilio Actual -->
                    <Label text="Domicilio Actual:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="txtDomicilio" promptText="Calle, número, colonia" 
                             style="-fx-pref-width: 300; -fx-pref-height: 35; -fx-background-radius: 4; -fx-border-radius: 4;"
                             GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <!-- Manzana -->
                    <Label text="Manzana:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="txtManzana" promptText="Número de manzana" 
                             style="-fx-pref-width: 300; -fx-pref-height: 35; -fx-background-radius: 4; -fx-border-radius: 4;"
                             GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Información Adicional -->
            <VBox spacing="15">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="3." style="-fx-text-fill: #1976D2; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Información Adicional" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                </HBox>
                <Separator style="-fx-background-color: #e0e0e0;"/>
                
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40" halignment="RIGHT"/>
                        <ColumnConstraints percentWidth="60"/>
                    </columnConstraints>
                    
                    <!-- Fila 1 - Estado Civil -->
                    <Label text="Estado Civil:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <ComboBox fx:id="cbEstadoCivil" promptText="Seleccione estado civil" 
                            style="-fx-pref-width: 300; -fx-pref-height: 35;"
                            GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <!-- Fila 2 - Ocupación -->
                    <Label text="Ocupación:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="txtOcupacion" promptText="Ocupación actual" 
                             style="-fx-pref-width: 300; -fx-pref-height: 35; -fx-background-radius: 4; -fx-border-radius: 4;"
                             GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <!-- Fila 3 - Tipo Ciudadano -->
                    <Label text="Tipo de Ciudadano:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <ComboBox fx:id="cbTipoCiudadano" promptText="Tipo de ciudadano" 
                            style="-fx-pref-width: 300; -fx-pref-height: 35;"
                            GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <!-- Fila 4 - Fecha Alta -->
                    <Label text="Fecha de Alta:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <DatePicker fx:id="dpFechaAlta" 
                              style="-fx-pref-width: 300; -fx-pref-height: 35;"
                              GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    
                    <!-- Fila 5 - Tipo Certificado -->
                    <Label text="Tipo de Certificado:" GridPane.rowIndex="4" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <ComboBox fx:id="cbTipoCertificado" promptText="Tipo de certificado" 
                            style="-fx-pref-width: 300; -fx-pref-height: 35;"
                            GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Botones -->
            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                <Button fx:id="btnGuardar" text="Guardar Ciudadano" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 180; -fx-pref-height: 40; -fx-background-radius: 4;"/>
                <Button fx:id="btnLimpiar" text="Limpiar Campos" 
                        style="-fx-background-color: #78909C; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 150; -fx-pref-height: 40; -fx-background-radius: 4;"/>
                <Button fx:id="btnCancelar" text="Cancelar" 
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 4;"/>
            </HBox>

        </VBox>
    </ScrollPane>

</VBox>